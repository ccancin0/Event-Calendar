<p id="notice"><%= notice %></p>

<h1>Theater Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Address</th>
   
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
      <% if event.category == 'Theater' %>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.address %></td>
        <td><%= link_to 'Show', event %></td>
       
       <% end %>
      </tr>




    <% end %>
    <td><%= link_to 'Back to Home', root_path %></td>
    
  </tbody>
</table>

<br>
