<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time %>
</p>

<p>
  <% if @category.any? %>
    <strong>Category:</strong>
      <% @category.each do |c| %>
        <%= c.category.title %>
      <% end %>
    <% end %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
