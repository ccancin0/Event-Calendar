<p id="notice"><%= notice %></p>
<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.first["title"] %></td>
        <td><%= event.first["description"] %></td>
      </tr>
   <% end %> 
  </tbody>
</table>
