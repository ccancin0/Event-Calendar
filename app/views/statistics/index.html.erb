<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Statistics</h1>
  <table>
    <thead>
      <tr>
        <th> Events </th>
        <th id="like"> Likes </th>
        <th id="rsvp"> RSVP </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
      <tr>
          <td><%= event.title %></td>
          <td id="like"><%= event.get_upvotes.size %> </td>
          <td id="rsvp"><% rsvp = Rsvp.where("event_id = ?", event.id) %>
              <% rsvp.each do |r| %>
              <% user = User.where("id = ?", r.user_id).first %>
              <%= user.email %>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

