<p id="notice"><%= notice %></p>

<h1>Category Events</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category_events.each do |category_event| %>
      <tr>
        <td><%= category_event.event %></td>
        <td><%= category_event.category %></td>
        <td><%= link_to 'Show', category_event %></td>
        <td><%= link_to 'Edit', edit_category_event_path(category_event) %></td>
        <td><%= link_to 'Destroy', category_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

